#!/bin/sh
# wifi enabled script

devidx=0

for _dev in /sys/class/ieee80211/*; do
				[ -e "$_dev" ] || continue

				dev="${_dev##*/}"
				echo $_dev $dev $devidx

				mode_band=""
				channel=""
				htmode=""
				ht_capab=""
				scanning=""


				uci -q batch <<-EOF
								set wireless.radio${devidx}.disabled=0
								set wireless.default_radio${devidx}.ssid=netams_$devidx
								set wireless.default_radio${devidx}.encryption=none
EOF
				uci -q commit wireless

				devidx=$(($devidx + 1))
done

